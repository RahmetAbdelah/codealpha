    }

    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 2rem;
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
    }

    .image-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      overflow: hidden;
      text-align: center;
    }

    .image-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .view-btn {
      background-color: #ff5fa2;
      color: white;
      padding: 10px 15px;
      margin: 10px;
